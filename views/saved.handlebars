<div class="container">
    <div class="row mt-4">
        <div class="col">
            <h3 class="mt-2" id="title">Saved Articles</h3>
            <a class="btn btn-primary btn-sm ml-4 mb-3" href="/">Back to Scraped Articles</a>

        </div>
    </div>
    <div class="row mt-3" id="results">
        {{#if articles}}
        {{#each articles}}
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                <div class="card-body p-2">
                    <h6 class="card-title crop-text-2"><a href="{{this.link}}" target="_blank">{{this.title}}</a></h6>
                    <button type="button" class="btn btn-primary btn-sm remove" data-id="{{this._id}}">Remove</button>
                    <button type="button" class="btn btn-primary btn-sm notes" data-id="{{this._id}}" data-toggle="modal"
                        data-target="#notes">Article notes</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h5 class="my-3 mx-auto">You don't have any saved articles yet. Go back and save some articles to use these
            features.</h5>
        {{/if}}
    </div>
</div>
{{!-- Modal to see, add notes --}}
<div class="modal" id="notes" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="old-notes">
                </div>
                <textarea class="form-control" rows="3" id="note-content" placeholder="Enter your note here."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary save-note" data-dismiss="modal">Submit note</button>
            </div>
        </div>
    </div>
</div>