<div class="container">
    <div class="row mt-4">
        <div class="col">
            <h3 class="mt-3" id="title">St. Louis Sports News</h3>
            <button type="button" class="btn btn-primary ml-4 mb-3" id="scrape">Scrape Articles</button>
            <button type="button" class="btn btn-primary ml-2 mb-3" id="clear">Clear Articles</button>
        </div>
    </div>
    <div class="row mt-3" id="results">
        <div class="loader">            
        </div>
        {{#if articles}}
        {{#each articles}}
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                <div class="card-body p-2">
                    <h6 class="card-title crop-text-2"><a href="{{this.link}}" target="_blank">{{this.title}}</a></h6>
                    <button type="button" class="btn btn-primary btn-sm save" data-id="{{this._id}}">Save Article</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h3 class="my-3 mx-auto">You don't have any results yet. Hit the Scrape button to get started.</h5>
        {{/if}}
    </div>
</div>